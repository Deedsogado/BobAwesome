<Window x:Class="Deliverable6.frmGameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deliverable6"
        mc:Ignorable="d"
        Title="Game Over! (or is it?)" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="132*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbMessage" Text="Message" Grid.Row="0" Grid.RowSpan="1" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <StackPanel x:Name="stkGameOverButtons" Grid.Row="1" Grid.RowSpan="1" >
            <Button x:Name="btnRestart" Content="Restart" Click="btnRestart_Click"/>
            <Button x:Name="btnExit" Content="Exit"  Click="btnExit_Click"/>
            <Button x:Name="btnOkay" Content="OK" Click="btnOkay_Click"/>
        </StackPanel>
    </Grid>
</Window>
